<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img
      class="item-img"
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
    />
    <div class="header-fields">
      <h1 class="charname">
        <input
          name="name"
          type="text"
          value="{{item.name}}"
          placeholder="Name"
        />
      </h1>
    </div>
  </header>

  {{! Sheet }}
  <section class="item-body">
    <div class="equipment-table">
      <table>
        <tr class="equipment-header">
          <th>{{localize "FU.item.equipment.cost"}}</th>
          <th>{{localize "FU.item.equipment.armor.class"}}</th>
          <th>{{localize "FU.item.equipment.armor.defense"}}</th>
          <th>{{localize "FU.item.equipment.armor.magicDefense"}}</th>
          <th>{{localize "FU.item.equipment.armor.initiativeMod"}}</th>
        </tr>
        <tr>
          <td>
            <div class="equipment-cell item-cost">
              {{numberInput system.cost name="system.cost" placeholder="0"}}
              <span>z</span>
            </div>
          </td>
          <td>
            <div class="equipment-cell">
              <select name="system.class">
                {{#select system.equipmentClass}}
                  {{#each config.item.equipmentClass as |name attribute|}}
                    <option value="{{attribute}}">{{localize name}}</option>
                  {{/each}}
                {{/select}}
              </select>
            </div>
          </td>
          <td>
            <div class="equipment-cell">
              <select name="system.defense">
                {{#select system.defense}}
                  {{#each config.item.defense as |def value|}}
                    <option value="{{def.value}}">{{localize
                        def.label
                      }}</option>
                  {{/each}}
                {{/select}}
              </select>
            </div>
          </td>
          <td>
            <div class="equipment-cell">
              <select name="system.magicDefense">
                {{#select system.magicDefense}}
                  {{#each config.item.magicDefense as |def value|}}
                    <option value="{{def.value}}">{{localize
                        def.label
                      }}</option>
                  {{/each}}
                {{/select}}
              </select>
            </div>
          </td>
          <td>
            <div class="equipment-cell item-input">
              {{numberInput
                system.initiativeMod
                name="system.initiativeMod"
                placeholder="0"
              }}
            </div>
          </td>
        </tr>
      </table>
    </div>

    <div class="item-qualities">
      <div class="qualities-header">
        <span class="qualities-title">{{localize
            "FU.item.equipment.qualities"
          }}</span>
      </div>

      <div class="qualities-list">
        {{! Qualities  }}
        {{#each flags.fabulaUltima.qualities as |quality id|}}
          <div class="quality-element">
            <i class="star fa-solid fa-star"></i>
            <span class="quality-name">{{localize quality.label}}</span>
            {{#if quality.value1}}
              <span class="fabulaUltima-wrapper">
                {{#if quality.value1Name}}<span
                    class="fabulaUltima-wrapped"
                  >{{localize quality.value1Name}}</span>
                {{else}}<span
                    class="fabulaUltima-wrapped"
                  >{{quality.value1}}</span>
                {{/if}}</span>
            {{/if}}
            {{#if quality.value2}}
              <span class="fabulaUltima-wrapper">
                {{#if quality.value2Name}}
                  <span class="fabulaUltima-wrapped">{{localize
                      quality.value2Name
                    }}</span>
                {{else}}<span
                    class="fabulaUltima-wrapped"
                  >{{quality.value2}}</span>
                {{/if}}
              </span>
            {{/if}}
            <span class="grow1"></span>
            <a
              id="{{id}}"
              class="item-create remove-quality"
              title="{{localize 'FU.item.equipment.removeQuality'}}"
            >
              <i class="trash fa-solid fa-trash"></i>
            </a>
          </div>
        {{/each}}

        <div class="qualities-selector">
          <select class="new-quality" name="newQuality">
            {{#select newQuality}}
              <option value="">{{localize "FU.item.selectQuality"}}</option>
              {{#each config.item.defensiveQualities as |quality attribute|}}
                <option value="{{attribute}}">{{localize quality.name}}</option>
              {{/each}}{{/select}}
          </select>
          <a
            class="item-create add-quality"
            style="visibility: hidden"
            title="{{localize 'FU.item.equipment.addQuality'}}"
          >
            <i class="fas fa-plus"></i>
          </a>
        </div>
      </div>
    </div>

  </section>


</form>